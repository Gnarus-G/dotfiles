{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoupdate": true,
  "instructions": ["~/d/dotfiles/.config/nvim/lua/gnarus/fp-system-prompt.md"],
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss:latest": {},
        "minimax-m2.1:cloud": {}
      }
    }
  },
  "mcp": {
    "context7-mcp": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    },
    "ez-web-search-mcp": {
      "type": "local",
      "command": [
        "sh",
        "-c",
        "node ${HOME}/.mcphub/servers/ez-web-search-mcp/build/index.js"
      ]
    },
    "fetch-mcp": {
      "type": "local",
      "command": [
        "sh",
        "-c",
        "node ${HOME}/.mcphub/servers/fetch-mcp/dist/index.js"
      ]
    },
    "screenshot-mcp": {
      "type": "local",
      "command": [
        "bash",
        "-c",
        "${HOME}/.config/mcphub/servers/screenshot-mcp/run-server.sh"
      ]
    }
  }
}
