{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoupdate": true,
  "instructions": ["~/d/dotfiles/.config/nvim/lua/gnarus/fp-system-prompt.md"],
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss:latest": {},
        "minimax-m2.1:cloud": {}
      }
    }
  },
  "mcp": {
    "context7-mcp": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    },
    "tts": {
      "type": "local",
      "command": ["tts-mcp"],
      "environment": {
        "DBUS_SESSION_BUS_ADDRESS": "unix:path=/run/user/1000/bus",
        "HIMITHER_TTS_LOG_FILE": "/tmp/tts-mcp-server.log",
        "RUST_LOG": "debug",
        "XDG_RUNTIME_DIR": "/run/user/1000"
      }
    },
    "screenshot-mcp": {
      "type": "local",
      "command": [
        "bash",
        "-c",
        "${HOME}/.config/mcphub/servers/screenshot-mcp/run-server.sh"
      ]
    }
  }
}
