#!/bin/sh

export SCRIPTPATH="$(
  cd "$(dirname "$0")"
  pwd -P
)"

leftwm-command "UnloadTheme"

# Kill eww
eww -c $SCRIPTPATH/.config/eww kill

# Clean up dynamically generated configurations
echo "ðŸ§¹ Cleaning up dynamic eww configurations..."
if [ -f "$SCRIPTPATH/.config/eww/cleanup_bars.sh" ]; then
  $SCRIPTPATH/.config/eww/cleanup_bars.sh
fi

pkill stalonetray

pkill picom

pkill dunst

echo "âœ… Theme shutdown complete"
